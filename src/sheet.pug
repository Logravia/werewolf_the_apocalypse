include mixins.pug
include hidden_attributes.pug
// TITLE

h1.werewolf-title Werewolf

// DESCRIPTION TABLE
- const character_descriptors = ["name", "concept", "patron", "chronicle", "auspices", "tribe"]
div.description-grid-wrapper
  div.description-grid
   each word in character_descriptors
     div.label-input-wrapper
       label.char-desc-label= word + ":"
       input.description-input(type='text' name=`attr_${word}`)

// ATTRIBUTES
- const attributes = {physical: ["strength", "dexterity", "stamina"], social: ["charisma", "manipulation", "composure"],  mental: ["intelligence", "wits", "resolve"] }

h2.category-title Attributes

div.list-container
  each list, title in attributes
    div.attribute-list
      h3.list-title #{title}
      each attr in list
        div.name-value-wrapper
          div.name-roll-button-wrapper
            p.attribute #{attr}
            div.roll-btn-wrapper
              button Roll
          +radio-button-set(attr, 5)
    div.centering-border

div.health-will
  div.health-container
    h4 Health
    +checkbox-set("health", 10)
  div.willpower-container
    h4 Willpower
    +checkbox-set("willpower", 10)

div.crinos-container
  h4 Crinos
    +checkbox-set("crinos", 4)

// SKILLS
h2.category-title Skills

- const skills = {left: ["athletics", "brawl", "craft", "driving", "firearms", "larceny", "melee", "stealth", "survival"], mid: ["animal ken", "etiquette","insight", "intimidation","leadership","performance", "persuasion", "streetwise", "subterfuge"], right: ["academics", "awareness", "finance", "investigation", "medicine", "occult", "politics", "science", "technology"]}
div.skill-flexbox
  each list, label in skills
    div(class=label+'-list')
      each skill in list
        div.skill-value-wrapper
          p.skill #{skill}
          +radio-button-set(skill, 5)

h2.category-title Renown

div.renown-container
  div.renown-value-wrapper
    h3 Glory
    +radio-button-set("glory", 5)
  div.renown-value-wrapper
    h3 Honor
    +radio-button-set("honor", 5)
  div.renown-value-wrapper
    h3 Wisdom
    +radio-button-set("wisdom", 5)

h2.category-title Gifts & Rites

table
  tr
    th Name
    th Pool
    th Cost
    th Notes
  tr
  each _ in [1, 2, 3, 4, 5, 6, 7, 8]
      tr
        td  Blank ...
        td  Blank ...
        td  Blank ...
        td  Blank ...

div.rage-value-wrapper
  h3 Rage
  +radio-button-set("rage", 5)

include back_sheet.pug
