include mixins.pug
include hidden_attributes.pug

h1.werewolf-title Werewolf

// BACK DESCRIPTION

table.tenet-table
  thead
    tr
      th Chronicle Tenets
      th Touchstones
      th Favors &amp; Bans
  tbody
    tr
      td
        textarea.long-input
      td
        textarea.long-input
      td
        textarea.long-input

// SPLIT
div.left-right-container

  //LEFT
  div.left
    table.flaw-table
      thead
        tr
          th(colspan="2")
            h3 Advantages & Flaws
      tbody
        - for (let i=0; i<12; i++)
          tr
            td
              input.table-input(type='text' name='attr_advantage_flaw'+i)
            td
              +radio-button-set("advantage_flaw_value"+i, 5)


    div.harano-hauglosk-wrapper
      div.harano-wrapper
        h4 Harano
        +radio-button-set("hauglosk", 5)
      div.hauglosk-wrapper
        h4 Hauglosk
        +radio-button-set("harano", 5)

    div.appearance-history-wrapper
      div.appearance
        div.floating-title
          h3 Appearance
        textarea.long-input
      div.history
        div.floating-title
          h3 History
        textarea.long-input

  //RIGHT
  div.right
    h3 Forms Of The Garou
    div.infobox-wrapper
      div.infobox
        h4 Homid
        div.info
          p Cost: Free
          p Silver immunity
        img
      div.infobox
        h4 Glabro
        div.info
          p Cost: One Rage Check
          p Physical Tests: Two-Dice Bonus
          p Social Tests: Two-Dice Penalty
          p Regenerate: 1 per Rage Check
        img
      div.infobox
        h4 Crinos
        div.info
          p Cost: Two Rage Checks
          p Spend 1 Willpower per turn or frenzy
          p Physical Tests: Four-Dice Bonus
          p Health Levels: +4
          p Social and Stealth Tests: Fail
          p Regenerate: 2 Per Rage Check
          p Claws: +3
          p Bite: +1 Aggravated
          p Causes Delirium
        img
      div.infobox
        h4 Hispo
        div.info
          p Cost: One Rage Check
          p Physical Tests:
          p Two-Dice Bonus**
          p Stealth Tests: Two-Dice Penalty
          p Social Tests: Limited to wolves and Garou
          p Regenerate: 1 per Rage Check
          p Bite: +1 Aggravated
        img
      div.infobox
        h4 Lupus
        div.info
          p Cost: Free
          p Silver immunity
          p Social Tests: Limited to wolves and Garou
        img
    p * Does not apply to intimidation or non-humans
    p ** Does not apply to Stealth tests

    div.notes-wrapper
      div.notes
        div.floating-title
          h3 Notes
        textarea.long-input

    script(type="text/worker")
      include index.js
